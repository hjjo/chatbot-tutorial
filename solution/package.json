{
  "name": "conversation-simple",
  "description": "A simple Node.js based web app which shows how to use the Conversation API to recognize user intents.",
  "version": "0.1.1",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test-integration": "casperjs test ./test/integration/test.*.js",
    "test-integration-runner": "NODE_ENV=test node casper-runner.js",
    "test": "npm run lint && npm run test-unit && npm run test-integration-runner",
    "test-unit": "istanbul cover ./node_modules/mocha/bin/_mocha test/unit",
    "lint": "eslint .",
    "autofix": "eslint --fix .",
    "codecov": "npm run test && (codecov || true)"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/watson-developer-cloud/conversation-simple.git"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "body-parser": "^1.15.2",
    "cfenv": "*",
    "cloudant": "1.6.x",
    "dotenv": "^2.0.0",
    "express": "^4.14.0",
    "moment": "^2.17.1",
    "node-schedule": "^1.2.0",
    "node-telegram-bot-api": "^0.27.0",
    "request": "^2.80.0",
    "watson-developer-cloud": "^2.25.1"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.4",
    "casperjs": "^1.1.3",
    "codecov": "^1.0.1",
    "eslint": "^6.6.0",
    "istanbul": "^0.4.2",
    "mocha": "^2.4.5",
    "phantomjs-prebuilt": "^2.1.13",
    "supertest": "^1.2.0"
  },
  "engine": {
    "node": ">= 6.9.x",
    "npm": "> 3.10.x"
  }
}
